{
	"name": "varsel",
	"version": "0.5.2",
	"description": "Headless yet opinionated toast notifications for Svelte apps.",
	"type": "module",
	"license": "MIT",
	"author": "Marek Jóźwiak",
	"keywords": [
		"svelte",
		"toast",
		"toaster",
		"notifications",
		"ui"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/66HEX/varsel.git"
	},
	"homepage": "https://github.com/66HEX/varsel#readme",
	"bugs": {
		"url": "https://github.com/66HEX/varsel/issues"
	},
	"files": [
		"dist"
	],
	"svelte": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build:css": "npx @tailwindcss/cli -i ./src/lib/styles.css -o ./dist/styles.css --minify",
		"build:css:watch": "npx @tailwindcss/cli -i ./src/lib/styles.css -o ./dist/styles.css --watch --minify",
		"build": "bun run build:css && svelte-package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"dev": "bun run build:css:watch & svelte-package --watch",
		"test": "vitest run",
		"lint": "tsc -p tsconfig.json --noEmit",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1"
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/cli": "^4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"jsdom": "^27.3.0",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15",
		"vitest-axe": "^0.1.0"
	}
}
